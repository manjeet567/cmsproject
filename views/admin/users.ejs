<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Document</title>
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Explora&display=swap" rel="stylesheet">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <link rel="stylesheet" href="/admin/css/style.css">
      </head>
<body>

    <%-include('../../partials/admin/header.ejs')%>

    <section id="mid">
        <div class="container">
            <div class="row">
                <%-include('../../partials/admin/left.ejs')%>
                <div class="col-md-9">
                    <h2>User's Management</h2>
                    <div class="table-responsive-md">
                    <table class="table table-hover">
                        <tr>
                            <th>S.No</th>
                            <th>Email</th>
                            <th>Email Status</th>
                            <th>User Status</th>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>User Role</th>
                        </tr>
                        <%record.forEach((result,key)=>{%>
                            <tr>
                                <td><%=key+1%></td>
                                <td><%=result.email%></td>
                                <td><%=result.emailStatus%></td>
                                <%if(result.status=='Suspended'){%>
                                <td><a href="/admin/userstatusupdate/<%=result.id%>"><button style="width: 100px;" class="btn btn-danger"><%=result.status%></button></a></td>
                                <%}else{%>
                                    <td><a href="/admin/userstatusupdate/<%=result.id%>"><button style="width: 100px;" class="btn btn-success"><%=result.status%></button></a></td>
                                    <%}%>
                                <td><%=result.firstName%></td>
                                <td><%=result.lastName%></td>
                                <%if(result.role=='Public'){%>
                                <td><a href="/admin/userroleupdate/<%=result.id%>"><button style="width: 70px;" class="btn btn-light"><%=result.role%></button></a></td>
                                <%}else{%>
                                    <td><a href="/admin/userroleupdate/<%=result.id%>"><button style="width: 70px;" class="btn btn-secondary"><%=result.role%></button></a></td>
                                    <%}%>
                            </tr>
                       <%})%>
                       <%if(!record.length){%>
                        <tr>
                            <td colspan="7" class="text-center"><h2>No Record Found</h2></td>
                        </tr>
                        <%}%>
                    </table>
                </div>
                </div>
            </div>
        </div>
    </section>

    <%-include('../../partials/admin/footer.ejs')%>
</body>
</html>